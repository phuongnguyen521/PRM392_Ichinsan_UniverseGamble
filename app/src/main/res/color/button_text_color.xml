<?xml version="1.0" encoding="utf-8"?>
<!--https://www.geeksforgeeks.org/how-to-change-the-background-color-of-button-in-android-using-colorstatelist/-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When the button is not enabled-->
    <item android:state_enabled="false" android:color="@android:color/white" />
    <!--When button is enabled-->
    <item android:state_selected="true" android:color="#F0141E" />
    <!--Default Text Color-->
    <item android:color="@color/black" />
</selector>