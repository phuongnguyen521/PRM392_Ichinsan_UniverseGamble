<?xml version="1.0" encoding="utf-8"?>
<!--https://www.geeksforgeeks.org/how-to-change-the-background-color-of-button-in-android-using-colorstatelist/-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="#b6b7b5" />
    <!--When Button is in pressed state or is in selected state-->
    <item android:state_pressed="true"
        android:state_selected="true"
        android:color="@color/white">
    </item>
    <!--Default Background Color -->
    <item android:color="@android:color/white" />
</selector>